<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<installation version="1.0">

	<info>
		<appname>OpenNMS</appname>
		<appversion>@appversion@</appversion>
		<url>http://www.opennms.org/</url>
	</info>
	
	<guiprefs width="640" height="480" resizable="yes">
		<modifier key="useButtonIcons" value="no"/>
		<modifier key="useLabelIcons" value="no"/>
		<modifier key="labelGap" value="2"/>	
		<modifier key="layoutAnchor" value="NORTHWEST"/>	
		<modifier key="useHeadingPanel" value="yes"/>
		<modifier key="headingPanelCounter" value="text"/>
		<modifier key="headingPanelCounterPos" value="inHeading"/>
	</guiprefs>
	
	<locale>
		<langpack iso3="eng"/>
	</locale>
	
	<resources>
		<res id="userInputSpec.xml" src="userInputSpec.xml" />
		<res id="ProcessPanel.Spec.xml" src="ProcessPanel.Spec.xml" />
		<res id="LicencePanel.licence" src="LICENSE"/>
		<!-- <res id="InfoPanel.info" src="Readme.txt"/> -->
	</resources>

	<!-- 
		The panels section.
		We indicate here which panels we want to use. The order will be respected.
	-->
	<panels>
		<panel classname="HelloPanel" />
		<!-- <panel classname="InfoPanel" /> -->
		<panel classname="LicencePanel" />
		<panel classname="OpenNMSJDKPathPanel" />
		<panel classname="TargetPanel" /> 
		<panel classname="UserInputPanel" />
		<panel classname="UserInputPanel" />
		<panel classname="PacksPanel" />
		<panel classname="InstallPanel" />
		<panel classname="ProcessPanel" />
		<panel classname="FinishPanel" />
	</panels>

	<!--
	<variables>
		<variable name="JDKPathPanel.minVersion" value="1.5.0" />
		<variable name="JDKPathPanel.skipIfValid" value="yes" />
	</variables>
	-->

	<!-- 
		The packs section.
		We specify here our packs.
	-->
	<packs>
		<pack name="Core" required="yes">
			<description>The base OpenNMS installation</description>
			<file src="bin" targetdir="$INSTALL_PATH" />
			<file src="contrib" targetdir="$INSTALL_PATH" />
			<file src="etc" targetdir="$INSTALL_PATH" />
			<file src="lib" targetdir="$INSTALL_PATH" />
			<file src="logs" targetdir="$INSTALL_PATH" />
			<file src="share" targetdir="$INSTALL_PATH" />
			<file src="jetty-webapps" targetdir="$INSTALL_PATH" />
			<singlefile src="bin/install.bat" target="$INSTALL_PATH/bin/install.bat" os="windows" />
			<singlefile src="bin/opennms.bat" target="$INSTALL_PATH/bin/opennms.bat" os="windows" />
			<singlefile src="etc/java.conf.win" target="$INSTALL_PATH/etc/java.conf" os="windows" />
			<singlefile src="etc/java.conf.unix" target="$INSTALL_PATH/etc/java.conf" os="unix" />
			<singlefile src="lib/jicmp.dll" target="$INSTALL_PATH/lib/jicmp.dll" os="windows" />
			<singlefile src="lib/libjicmp.jnilib" target="$INSTALL_PATH/lib/libjicmp.jnilib" os="mac" />
			<parsable targetfile="$INSTALL_PATH/bin/install.bat" os="windows" />
			<parsable targetfile="$INSTALL_PATH/bin/opennms.bat" os="windows" />
			<parsable targetfile="$INSTALL_PATH/etc/discovery-configuration.xml" />
			<parsable targetfile="$INSTALL_PATH/etc/java.conf" />
			@parsable_files@
		</pack>
		<pack name="Docs" required="no">
			<description>The documentation</description>
			<file src="docs" targetdir="$INSTALL_PATH"/>
		</pack>
	</packs>

</installation>
