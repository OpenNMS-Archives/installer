<processing>
  <job name="Setting Up the Database">
    <executefile name="$JDKPath/bin/java">
    	<arg>-Xmx256m</arg>
    	<arg>-Dinstall.database.name=$izpackDatabaseName</arg>
    	<arg>-Dinstall.database.url=jdbc:postgresql://$izpackDatabaseHost:5432/</arg>
    	<arg>-Dinstall.dir=$UNIFIED_INSTALL_PATH</arg>
    	<arg>-Dinstall.etc.dir=$UNIFIED_INSTALL_PATH/etc</arg>
    	<arg>-Dinstall.servlet.dir=$UNIFIED_INSTALL_PATH/webapps/opennms</arg>
    	<arg>-jar</arg><arg>$UNIFIED_INSTALL_PATH/lib/opennms_install.jar</arg>
    	<arg>-disU</arg>
    	<arg>--admin-username</arg><arg>$izpackDatabaseAdminUser</arg>
    	<arg>--admin-password</arg><arg>$izpackDatabaseAdminPass</arg>
    	<arg>-l</arg><arg>$UNIFIED_INSTALL_PATH/lib</arg>
    </executefile>
  </job>
</processing>
